{
  "name": "byjg/scriptify",
  "description": "Transform any PHP class into an executable script callable from command line without changes or refactoring.",
  "autoload": {
    "psr-4": {
      "ByJG\\Scriptify\\": "src/"
    }
  },
  "bin": [
    "scripts/scriptify"
  ],
  "require": {
    "symfony/console": "^5.4|^6.2|^7.0",
    "php": ">=8.1 <8.5"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "ext-posix": "*",
    "byjg/restserver": "^6.0",
    "phpunit/phpunit": "^10|^11",
    "vimeo/psalm": "^5.9|^6.12"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm"
  },
  "license": "MIT"
}
