{
  "name": "byjg/scriptify",
  "description": "Transform any PHP class into an executable script callable from the command line without changes or refactoring.",
  "autoload": {
    "psr-4": {
      "ByJG\\Scriptify\\": "src/"
    }
  },
  "bin": [
    "scripts/scriptify"
  ],
  "require": {
    "symfony/console": "^5.4|^6.2|^7.0",
    "byjg/jinja-php": "^6.0",
    "php": ">=8.3 <8.6",
    "ext-readline": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "ext-posix": "*",
    "byjg/restserver": "^6.0",
    "phpunit/phpunit": "^10.5|^11.5",
    "vimeo/psalm": "^5.9|^6.13"
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "psalm": "vendor/bin/psalm"
  },
  "license": "MIT"
}
